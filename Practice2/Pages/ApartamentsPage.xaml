<Page
    x:Class="Practice2.Pages.ApartamentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Practice2.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ApartamentsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="10,10,10,10"
            Background="{DynamicResource BorderBrush}"
            CornerRadius="15">
            <hc:TabControl
                Margin="10,10,10,10"
                Background="{x:Null}"
                BorderBrush="{x:Null}">
                <hc:TabItem Header="Apartaments" IsSelected="True">
                    <hc:SimpleStackPanel />
                </hc:TabItem>
                <hc:TabItem Header="Members">
                    <hc:SimpleStackPanel />
                </hc:TabItem>
                <hc:TabItem Header="My apartaments">
                    <hc:SimpleStackPanel />
                </hc:TabItem>
            </hc:TabControl>
        </Border>
    </Grid>
</Page>
